@{
    int currentUserId = (int)Context.Session.GetInt32("userId");
}
@model Todo

<div class="text-center">
    <h1 class="display-4">Add a Task </h1>
    <hr>
</div>
<div class="container">
    <form asp-action="CreateTask" asp-controller="Home" method="post">
        <input type="hidden" asp-for="UserId" value="@currentUserId">
        <div class = "mb-3"> 
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         <div class = "mb-3"> 
            <label asp-for="Description"></label>
            <textarea rows="3" asp-for="Description" class="form-control"></textarea> 
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         <div class = "mb-3"> 
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>  
    </form>
</div>