@model Dish

<div class="text-center">
    <Partial Name="_Nav"></Partial>
    <h1 class="display-4">Add a Dish!</h1>
    <hr>
</div>
<div class="container">
    <form asp-action="CreateDish" asp-controller="Home" method="post">
    
    <div class = "mb-3"> 
        <label asp-for="Name">Name of Dish</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class = "mb-3"> 
        <label asp-for="Calories"># of Calories</label>
        <input asp-for="Calories" class="form-control">
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class = "mb-3"> 
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class = "mb-3"> 
        <label asp-for="ChefId">ChefÂ´s Name</label>
        <select asp-for="ChefId" class="form-select">
            <option value=null selected>Select</option>
                @foreach(var c in ViewBag.AllChefs)
                {
                    <option value="@c.ChefId"> @c.FirstName @c.LastName </option>
                }    
        </select>
        <span asp-validation-for="ChefId" class="text-danger"></span>
    </div>
    <div class = "mb-3"> 
        <label asp-for="Tastiness">Tastiness</label>
        <select asp-for="Tastiness" class="form-select">
            <option value=null selected>Select</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
     <div class = "mb-3"> 
        <input type="submit" value="Add Dish" class="btn btn-primary">
    </div>  
    </form>
   
</div>