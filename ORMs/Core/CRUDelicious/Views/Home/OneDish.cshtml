@model Dish

<div class="text-center">
    <h1>@Model.Name</h1>
    <p><a href="/">Home</a> | <a href="dishes/new">Add a Dish</a></p>
</div>
<h2>@Model.Name by @Model.Chef</h2><hr>
<p>@Model.Description</p>
<p>Tastiness: @Model.Tastiness</p>
<p>Calories: @Model.Calories</p>

<div>
    <form asp-action="DeleteDish" asp-controller="Home" asp-route-dishId="@Model.DishId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger">
    </form>

    <form asp-action="UpdateDish" asp-controller="Home" asp-route-dishId="@Model.DishId" method="post">
        <input type="submit" value="Edit" class="btn btn-primary">
    </form>
</div>
<hr> 